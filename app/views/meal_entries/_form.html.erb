<%= form_with(model: meal_entry, local: true, class: "space-y-6") do |form| %>
  <% if meal_entry.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-500 rounded-lg p-4">
      <div class="flex items-start">
        <svg class="w-6 h-6 text-red-500 mr-3 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <div>
          <h2 class="font-bold text-red-800 mb-2">
            <%= pluralize(meal_entry.errors.count, "error") %> prohibited this meal entry from being saved:
          </h2>
          <ul class="list-disc list-inside text-red-700 space-y-1">
            <% meal_entry.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div class="space-y-2">
    <%= form.label :mean_type, "Meal Type", class: "block text-sm font-semibold text-gray-700" %>
    <%= form.text_field :mean_type, 
        placeholder: "e.g., Breakfast, Lunch, Dinner",
        class: "w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition" %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div class="space-y-2">
      <%= form.label :calories, class: "block text-sm font-semibold text-gray-700" do %>
        <span class="inline-flex items-center gap-2">
          ðŸ”¥ Calories
        </span>
      <% end %>
      <%= form.number_field :calories, 
          placeholder: "0",
          class: "w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent transition" %>
    </div>

    <div class="space-y-2">
      <%= form.label :proteins, class: "block text-sm font-semibold text-gray-700" do %>
        <span class="inline-flex items-center gap-2">
          ðŸ’ª Proteins (g)
        </span>
      <% end %>
      <%= form.number_field :proteins, 
          placeholder: "0",
          step: "0.1",
          class: "w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition" %>
    </div>

    <div class="space-y-2">
      <%= form.label :carbohydrates, class: "block text-sm font-semibold text-gray-700" do %>
        <span class="inline-flex items-center gap-2">
          ðŸŒ¾ Carbohydrates (g)
        </span>
      <% end %>
      <%= form.number_field :carbohydrates, 
          placeholder: "0",
          step: "0.1",
          class: "w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-transparent transition" %>
    </div>

    <div class="space-y-2">
      <%= form.label :fats, class: "block text-sm font-semibold text-gray-700" do %>
        <span class="inline-flex items-center gap-2">
          ðŸ¥‘ Fats (g)
        </span>
      <% end %>
      <%= form.number_field :fats, 
          placeholder: "0",
          step: "0.1",
          class: "w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent transition" %>
    </div>
  </div>

  <div class="pt-4">
    <%= form.submit "Save Meal Entry", class: "w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold px-6 py-4 rounded-lg shadow-md hover:shadow-lg transition duration-200 cursor-pointer" %>
  </div>
<% end %>
