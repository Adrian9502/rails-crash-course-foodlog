<% content_for :title, "Meal entries" %>

<div class="min-h-screen bg-linear-to-br from-blue-50 to-indigo-100 py-8 px-4">
  <div class="max-w-7xl mx-auto">
    <%# Header Section %>
    <div class="mb-8">
      <div class="flex justify-between items-center mb-4">
        <h1 class="text-2xl sm:text-3xl md:text-4xl font-bold text-gray-800">Meal Tracker</h1>
        <%= link_to new_meal_entry_path, class: "bg-indigo-600 hover:bg-indigo-700 text-white font-semibold px-6 py-3 rounded-lg shadow-md transition duration-200 flex items-center gap-2" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          New Meal Entry
        <% end %>
      </div>
      
      <% if notice %>
        <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 rounded-lg shadow-sm" role="alert">
          <p class="font-medium"><%= notice %></p>
        </div>
      <% end %>
    </div>

    <%# Meal Entries Grid %>
    <% if @meal_entries.any? %>
      <div id="meal_entries" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @meal_entries.each do |meal_entry| %>
          <div class="bg-white rounded-xl shadow-lg hover:shadow-xl transition duration-300 overflow-hidden">
            <%= link_to meal_entry, class: "block" do %>
              <div class="p-6">
                <div class="flex justify-between items-start mb-4">
                  <h2 class="text-xl font-bold text-gray-800 capitalize"><%= meal_entry.mean_type %></h2>
                  <span class="bg-indigo-100 text-indigo-800 text-sm font-semibold px-3 py-1 rounded-full">
                    <%= meal_entry.calories %> cal
                  </span>
                </div>
                
                <div class="space-y-3">
                  <div class="flex justify-between items-center pb-2 border-b border-gray-100">
                    <span class="text-gray-600 text-sm font-medium">ðŸ”¥ Calories</span>
                    <span class="text-gray-900 font-semibold"><%= meal_entry.calories %></span>
                  </div>
                  <div class="flex justify-between items-center pb-2 border-b border-gray-100">
                    <span class="text-gray-600 text-sm font-medium">ðŸ’ª Proteins</span>
                    <span class="text-gray-900 font-semibold"><%= meal_entry.proteins %>g</span>
                  </div>
                  <div class="flex justify-between items-center pb-2 border-b border-gray-100">
                    <span class="text-gray-600 text-sm font-medium">ðŸŒ¾ Carbs</span>
                    <span class="text-gray-900 font-semibold"><%= meal_entry.carbohydrates %>g</span>
                  </div>
                  <div class="flex justify-between items-center">
                    <span class="text-gray-600 text-sm font-medium">ðŸ¥‘ Fats</span>
                    <span class="text-gray-900 font-semibold"><%= meal_entry.fats %>g</span>
                  </div>
                </div>
              </div>
              <div class="bg-gray-50 px-6 py-3 border-t border-gray-100">
                <span class="text-indigo-600 hover:text-indigo-800 text-sm font-medium">View details â†’</span>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="bg-white rounded-xl shadow-lg p-12 text-center">
        <svg class="w-24 h-24 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        <h2 class="text-2xl font-bold text-gray-700 mb-2">No meal entries yet</h2>
        <p class="text-gray-500 mb-6">Start tracking your meals by creating your first entry!</p>
        <%= link_to "Create First Entry", new_meal_entry_path, class: "inline-block bg-indigo-600 hover:bg-indigo-700 text-white font-semibold px-8 py-3 rounded-lg shadow-md transition duration-200" %>
      </div>
    <% end %>
  </div>
</div>
